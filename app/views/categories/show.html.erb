<h1 align="center"><%= "Category: #{@category.name}" %></h2>
<br>
<!--List all articles-->
<div align="center">
  <% if logged_in? and current_user.admin? %>
    <div class="row">
      <span class="badge">
        <%= link_to "Edit Category Name", edit_category_path(@category) %>
      </span>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>
<!--clear the path is view/articles/_article-->
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>
